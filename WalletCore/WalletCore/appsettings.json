{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ExchangeRateDb": "Data Source=DESKTOP; Initial Catalog=ExchangeRateDB; Integrated Security=SSPI; Trust Server Certificate=true"
  },
  "ECBConfig": {
    "ClientName": "ECBClient",
    "BaseAddress": "https://www.ecb.europa.eu",
    "TimeoutSeconds": 30,
    "UserAgent": "WalletCore/1.0",
    "HandlerLifetimeMinutes": 5
  },
  "WalletDataServiceConfig": {
    "ClientName": "WalletDataService",
    "BaseAddress": "http://localhost:5000",
    "TimeoutSeconds": 30,
    "UserAgent": "WalletCore.DataService/1.0",
    "HandlerLifetimeMinutes": 5
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "ExchangeRates_"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "walletapp-logs-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv8",
          "numberOfShards": 1,
          "numberOfReplicas": 1
        }
      }
    ]
  }
}
